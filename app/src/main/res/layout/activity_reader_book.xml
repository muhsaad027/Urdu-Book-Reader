<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saadiqbal.bookapp.ReaderBook"
    android:orientation="vertical"
    android:weightSum="2"
    >

    <android.support.v7.widget.Toolbar
        android:id="@+id/pagetitle"
        android:minHeight="?attr/actionBarSize"
        android:background="#FF125881"
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/backindex"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/list"
            />

        <TextView
            android:id="@+id/Headingtoolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="کتاب کانام"
            android:gravity="center"
            android:textColor="#ffff"
            android:textSize="26dp" />



    </android.support.v7.widget.Toolbar>
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="اس کتاب کے بارے میں"
        android:textColor="#FF125881" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/bookcahper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="20dp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical|right"
                android:gravity="right"
                android:textAlignment="gravity"
                android:justificationMode="inter_word"
                android:textSize="20dp" />


        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:gravity="left"

                >
                <ImageView
                    android:id="@+id/homescreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/ic_home_white_36dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:layout_gravity="center"

                >
                <ImageView
                    android:id="@+id/forwardtoforward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/ic_chevron_left_white_36dp"
                    android:clickable="true" />

                <ImageView
                    android:id="@+id/backtoback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/ic_chevron_right_white_36dp"
                    android:clickable="true" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="20dp"
                >
                <ImageView
                    android:id="@+id/zoomin"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/zoominn"
                    android:clickable="true"
                    android:gravity="center" />

                <ImageView
                    android:id="@+id/zoomout"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/zoomot"
                    android:clickable="true"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
